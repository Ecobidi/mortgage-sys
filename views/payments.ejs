<%- include ('partials/top') %>

<div class="row space">
  <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
    <h3 class="title">Mortgage Payments</h3>
    <div>
      <a href="/payments/new" class="btn btn-primary">Add Mortgage Payment</a>
    </div>
  </div> 
</div>

<div class="row">
  <div class="col-12">
    <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Mortgage Payments</h4>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Borrower</th>
          <th>Loan ID</th>
          <th>Amount Paid (NGN) &#8358;)</th>
          <th>Penalty Paid (NGN) &#8358;)</th>
          <th>Date of Payment</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
          <% payments.forEach((p) => { %>
            <tr>
              <td><%= p.borrower_name %></td>
              <td><%= p.loan._id %></td>
              <td><%= p.amount %></td>
              <td><%= p.penalty %></td>
              <td><%= p.date_of_payment.toGMTString() %></td>
              <td>
                <a href='<%= "/payments/remove/" + p._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
    </table>
  </div>
</div>


<%- include ('partials/bottom') %>